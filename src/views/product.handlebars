<div id="app" class="p-4 bg-slate-800/95 h-auto">

  <h1 class="flex p-2 justify-center font-mono text-2xl text-slate-200">Detalles del producto {{product._id}}</h1>
  <div id="productDetail" class="flex justify-center m-6">
    <div
      class="max-w-4xl border rounded-lg shadow bg-gray-700/50 border-gray-600"
      id="{{product._id}}"
    >
              <h5 style="text-align:center; margin-top:20px; margin-bottom:20px;" class="text-2xl font-semibold tracking-tight text-white">{{product.title}}</h5>

      <div class="flex flex-wrap w-full p-2 justify-evenly">
        <img src="{{product.thumbnail}}" alt="product image" class="aspect-square max-h-64 m-2 ring-4 rounded-xl" />
      </div>

      <div class="px-5 pb-5">
          <p style="text-align:center; margin-top:20px; margin-bottom:20px; font-size:15px;" class="text-xs font-semibold tracking-tight text-white">{{product.description}}</p>
          <p style="text-align:center; margin-top:20px; margin-bottom:20px; font-size:15px;" class="text-xs font-semibold tracking-tight text-white">Categoria: {{product.category}}</p>
          <p style="text-align:center; margin-top:20px; margin-bottom:20px; font-size:15px;" class="text-xs font-semibold tracking-tight text-white">Stock disponible: {{product.stock}}</p>
          <p style="text-align:center; margin-top:20px; margin-bottom:20px; font-size:15px;" class="text-xs font-semibold tracking-tight text-white">Codigo del producto: {{product.code}}</p>
        <form id="addToCartForm-{{product._id}}">
          <div class="flex items-center justify-between">
            <p class="text-3xl font-bold text-white pt-2">${{product.price}}</p>
            <button
              type="submit"
              class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center -mb-3"
            >Agregar al carritoğŸ›’</button>
          </div>
          <div class="relative z-0 w-full mt-4 group">
            <input
              class="block py-2.5 px-0 w-full text-sm text-slate-200 bg-transparent border-0 border-b-2 border-gray-600 appearance-none focus:outline-none focus:ring-0 focus:border-blue-500 peer"
              placeholder=" "
              type="text"
              name="cid"
              id="cid"
              required
            />
            <label
              class="peer-focus:font-medium absolute text-sm text-slate-200 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-90 peer-focus:-translate-y-6"
              for="cid"
            >ID del carrito</label>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
